<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/user/welcome.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>action.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/user/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userLogoutServlet</servlet-name>
        <servlet-class>action.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buy_lottery</servlet-name>
        <jsp-file>/user/buy_lottery.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>buy_lottery</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buyServlet</servlet-name>
        <servlet-class>action.user.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buyServlet</servlet-name>
        <url-pattern>/buy_result</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>action.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register_servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bill</servlet-name>
        <jsp-file>/user/bill.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>bill</servlet-name>
        <url-pattern>/bill</url-pattern>
    </servlet-mapping>
</web-app>